    "lodash": "^4.17.4",
    "moment": "^2.20.1"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^4.12.0",
    "eslint-plugin-promise": "^3.6.0",
    "mocha": "^5.0.0",
    "sinon": "^4.2.2"
  },
  "private": true
}
